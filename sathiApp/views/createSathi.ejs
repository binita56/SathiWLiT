<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css"
        integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
</head>

<body>
    <form method="post" action="/save-event">
        <div class="form-row">
            <div class="form-group col-md-6">
                <label>Name</label>
                <input type="text" name="names" class="form-control" id="names" placeholder="Enter your name">
            </div>
            <div class="form-group col-md-6">
                <label>Phone Number</label>
                <input type="text" name="phoneNumber" class="form-control" id="phoneNumber"
                    placeholder="Enter your Phone Number">
            </div>
        </div>
        <div class="form-row">
            <div class="form-group col-md-6">
                <label>Email Address</label>
                <input type="email" name="emailAddress" class="form-control" id="emailAddress"
                    placeholder="Enter your Email">
            </div>


            <div class="form-group col-md-6">
                <label>Gender</label>
                <input type="text" name="gender" class="form-control" id="gender" placeholder="Your Gender">

            </div>
        </div>
        <div class="form-row">
            <div class="form-group col-md-4">
                <label>Destination</label>
                <input type="text" name="destination" class="form-control" id="destination"
                    placeholder="Your Destination">
            </div>

            <div class="form-group col-md-4">
                <label>Current Location</label>
                <input type="text" name="currentLocation" class="form-control" id="currentLocation"
                    placeholder="Your Current Location">
            </div>
            <div class="form-group col-md-4">
                <label>Preferred Number </label>
                <input type="text" name="requiredNumber" class="form-control" id="currentLocation"
                    placeholder="Required Number of People">
            </div>
        </div>

        </div>
        <div class="form-row">
            <div class="form-group col-md-6">
                <label>Start Travel Date</label>
                <input type="date" name="startTravelDate" class="form-control" id="startTravelDate">
            </div>

            <div class="form-group col-md-6">
                <label>End Travel Date</label>
                <input type="date" name="endTravelDate" class="form-control" id="currentLocation">
            </div>
        </div>
        <div class="form-row">
            <div class="form-group col-md-6">
                <label>Itinerary</label>
                <textarea class="form-control" name="itinerary" id="itinerary" rows="5"></textarea>
            </div>
            <div class="form-group col-md-6">
                <label>Remarks</label>
                <input type="text" class="form-control" name="remarks" id="remarks" placeholder="Remarks">
                <button style="float:right; margin-top: 10px;" type="submit" class="btn btn-primary">Submit</button>

            </div>
        </div>
    </form>
</body>

</html>